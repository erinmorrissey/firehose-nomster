<div class="booyah-box">

  <h1>My Profile</h1>

  <div class="col-xs-4">
    <%= image_tag 'user.png' %>
    <h2><%= @user.email %></h2>
  </div>

  <div class="col-xs-8">
    <h3>Member since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
    <h3><%= @user.comments.count %> total comments</h3>
    <h3><%= @user.comments.where(rating: '5_stars').count %> 5-star ratings</h3>
  </div>

  <div class="clear"></div>

</div>